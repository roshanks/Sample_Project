<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="SAVE YOUR TASK BELOW"
            android:textColor="@color/colorGreen"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="81dp"
            android:ems="10"
            android:hint="Enter the task name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_task_name"
            android:layout_alignStart="@+id/et_task_name"
            android:layout_below="@+id/et_task_name"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Enter the task description"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/bt_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_task_description"
            android:layout_alignRight="@+id/et_task_description"
            android:layout_below="@+id/et_task_description"
            android:layout_marginTop="42dp"
            android:text="SAVE" />

        <Button
            android:id="@+id/bt_viewtasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_task"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:text="VIEW ALL TASK" />
    </RelativeLayout>
</LinearLayout>