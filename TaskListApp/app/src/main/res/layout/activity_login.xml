<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#BDC3C7"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/login_ic_size"
            android:layout_height="@dimen/login_ic_size"
            android:layout_marginBottom="@dimen/login_ic_margin_bottom"
            app:srcCompat="@drawable/splash_ic" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/login_tiet_width"
            android:layout_marginBottom="@dimen/margin_basic_space1"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_login_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_id" />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/login_tiet_width"
            android:layout_marginBottom="@dimen/margin_basic_space1"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_pwd" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:background="@drawable/bt_login_selector_bg"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text="@string/login" />

    </LinearLayout>

</LinearLayout>